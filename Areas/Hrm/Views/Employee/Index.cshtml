<html>

<head>

    <title>Employee Information Form</title>
    <!-- You can link your custom stylesheets or include additional styling here -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .address {
            width: 30%;
        }
    </style>
</head>
<body>

    <h2>Employee Information Form</h2>

    <form>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <label for="joindate">Join Date:</label>
        <input type="date" id="joindate" name="joindate" required>

        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateofbirth" name="dateofbirth" required>

        <label for="departmentId">Department ID:</label>
        <input type="number" id="departmentid" name="departmentid" required>

        <label for="designationId">Designation ID:</label>
        <input type="number" id="designationid" name="designationid" required>

        <label for="salary">Salary:</label>
        <input type="number" id="salary" name="salary" required>

        <label for="empStatus">Employee Status:</label>
        <select id="empstatus" name="empstatus" required>
            <option   value="1">Active</option>
            <option value="0">Inactive</option>
        </select>

        <label for="address">Address:</label>
        <textarea id="address" name="address" rows="4" required></textarea>

        <button type="button" id="savebutton" onclick="SubmitForm()">Submit</button>


        
        <button type="button" id="saveloginbutton" onclick="Submitloginform()">Login</button>



    </form>

</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    function SubmitForm(){
        var formData = new FormData();
        formData.append('empname', $('#name').val());
        formData.append('email', $('#email').val());
        formData.append('password', $('#password').val());
        formData.append('dtjoin', $('#joindate').val());
        formData.append('dtbirth', $('#dateofbirth').val());
        formData.append('dept_id', $('#departmentid').val());
        formData.append('desig_id', $('#designationid').val());
        formData.append('salary', $('#salary').val());
        formData.append('emp_status', $('#empstatus').val());
        formData.append('address', $('#address').val());
        
        $.ajax({
            type: 'POST',
            url: '/Hrm/Employee/Save',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                // Handle the success case, e.g., remove the deleted image from the table  
                $('#name').val('');
                $('#email').val('');
                $('#password').val('');
                $('#joindate').val('');
                $('#dateofbirth').val('');
                $('#departmentid').val('');
                $('#designationid').val('');
                $('#salary').val('');
                $('#empstatus').val('');
                $('#address').val('');
                //window.location.href = '/Hrm/Employee/Show';
            },
            error: function () {

            }
            
        });
    }

    function Submitloginform()
    {
            window.location.href = '/Hrm/Emplogin/Login';
        
    }
</script>