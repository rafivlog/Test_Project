
<style>


        /* Standard CSS Styles for the Table */
        table {
            border-collapse: collapse;
            width: 100%;
            
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            /* text-align: left; */
            position: center;
        }

        th {
            background-color: #f2f2f2;
        }


/*     ager code  */
    .large-button {
        display: inline-block;
        padding: 20px 20px; /* Increase padding for a larger button */
        font-size: 15px; /* Increase font size for a larger button */
        text-decoration: none;
        cursor: pointer;
        border: 2px solid #3498db; /* Border color */
        background-color: #3498db; /* Background color */
        color: #fff; /* Text color */
        border-radius: 8px; /* Rounded corners */
        transition: background-color 0.3s, color 0.3s;
        position:relative;
       /*  margin-left:50%;
        margin-bottom:25px; */
    }
</style>

<div>
    <h1>All Employee List</h1>
    <button class="large-button" type="button" onclick="backbutton()">Back</button>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Sr</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Email</th>
            <th scope="col">Join Date</th>
            <th scope="col">DOB</th>
            <th scope="col">DepID</th>
            <th scope="col">DesgID</th>
            <th scope="col">Salary</th>
            <th scope="col">Status</th>
            <th scope="col">Address</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.employee.Count; i++)
        {
            <tr>
                <td style="text-align:center">@(i+1)</td>
                <td style="text-align:center">@ViewBag.employee[i].empname</td>
                <td style="text-align:center">@ViewBag.employee[i].email</td>
                <td style="text-align:center">@ViewBag.employee[i].dtjoin</td>
                <td style="text-align:center">@ViewBag.employee[i].dtbirth</td>
                <td style="text-align:center">@ViewBag.employee[i].dept_id</td>
                <td style="text-align:center">@ViewBag.employee[i].desig_id</td>
                <td style="text-align:center">@ViewBag.employee[i].salary</td>
                <td style="text-align:center">
                    @if (ViewBag.employee[i].emp_status == true)
                    {
                        <text>Active</text>
                    }
                    else
                    {
                       <text>InActive</text>
                    }
                </td>
                <td style="text-align:center">@ViewBag.employee[i].address</td>
                @* use url link to go edit page , same as employee index page , because some complicated() issues   *@
                <td style="text-align:center">
                   <button>
                        <a href="@Url.Action("Edit","Employee",new {desig_id = @ViewBag.employee[i].desig_id})" title="Edit" class="btn btn-success">Edit</a><a href="@Url.Action("Edit","Employee",new {desig_id = @ViewBag.employee[i].desig_id})" title="Edit" class="btn btn-success">Edit</a>
                   </button> 
                    <button type="button" class="btn btn-danger" onclick="deleteClient(@ViewBag.employee[i].desig_id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    function backbutton() 
    {
        window.location.href = '/Hrm/Empdashboard/Dashboard';
    }


    //Deleted work
    function deleteClient(desig_id) {
        //window.location.href = '/Hrm/Employee/Index';
        console.log(desig_id);
        if (confirm("Are you sure you want to delete this entry?")) {
            $.ajax({
                url: '/Hrm/Employee/Delete/' + desig_id,
                type: 'POST', // You can use 'DELETE' if your server supports it
                success: function (result) {
                    // Handle the success case, e.g., remove the deleted image from the table
                   // Swal.close();

                    if (result == true) {
                        window.location.reload();
                    }
                    
                }, 
                error: function () {
                   // swal.fire('Oops...', 'Something went wrong!', 'error');
                }
            });
        }
    }


    //Edited Work
    function EditClient(desig_id) {
        window.location.href = '/Hrm/Employee/Index';
        $.ajax({
            type: "GET",
            url: "/Hrm/Employee/GetData/" + desig_id,
            success: function (data) {
                // Append the loaded content to the container
                //$('#hidden_pk_client_id').val(data.pk_client_id);
                console.log(data);
                $('#name').val(data.empname);
                $('#email').val(data.email);
                $('#joindate').val(data.dtjoin);
                $('#dateofbirth').val(data.dtbirth);
                $('#departmentid').val(data.dept_id);
                $('#designationid').val(data.desig_id);
                $('#salary').val(data.salary);
                $('#empstatus').val(data.emp_status);
                $('#address').val(data.address);
               

                // Show the container
                //$("#partialViewContainer").show();
                $('#savebutton').attr('onclick', 'Update()')
                //$('#clientModal').modal('show');
            },
            error: function (xhr, status, error) {

                //swal.fire('Oops...', 'Something went wrong!', 'error');
            }
        });
    }

    // updated work
    function Update() {

        // Update logic
        var formData = new FormData();
        // Append data to the FormData object
        formData.append('empname', $('#name').val());
        formData.append('email', $('#email').val());
        formData.append('dtjoin', $('#joindate').val());
        formData.append('dtbirth', $('#dateofbirth').val());
        formData.append('dept_id', $('#departmentid').val());
        formData.append('desig_id', $('#designationid').val());
        formData.append('salary', $('#salary').val());
        formData.append('emp_status', $('#empstatus').val());
        formData.append('address', $('#address').val());
       
        
        $.ajax({
            type: 'POST',
            url: '/Hrm/Employee/UpdateClient',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                //Swal.close();

                if (result == true) {
                        window.location.reload();
                }
                else {
                    console.log('Failure block executed');
                    alert('Failed to update entry. ' + result.errorMessage);
                }
            },

            error: function () {
                
            }
        });


    }

</script>
